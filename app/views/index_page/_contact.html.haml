.modal-dialog{role: "document"}
  .modal-content
    .modal-header
      %button.close{data: {:dismiss => "modal"}}
        %span Close &times;
      %h4.modal-title#modal-label Contact Me
    .modal-body
      = form_tag({controller: "index_page", action: "message"}, method: :post, class: "form-horizontal")  do
        .form-group
          = text_field_tag :name, nil, :placeholder => "Name..."
        .form-group
          = text_field_tag :email, nil, placeholder: "Email..."
        .form-group
          = text_area_tag :message, nil, placeholder: "Message..."
        .form-group
          = submit_tag "Send"

