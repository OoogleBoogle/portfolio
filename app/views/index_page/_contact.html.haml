.modal-dialog{role: "document"}
  .modal-content
    .modal-header
      %button.close{data: {:dismiss => "modal"}}
        %span Close &times;
      %h4.modal-title#modal-label Contact Me
    .modal-body
      = form_tag({controller: "index_page", action: "message"}, method: :post)  do
        .form-group
          = text_field_tag :name, nil, :placeholder => "Name...", class: "form-control"
        .form-group
          = text_field_tag :email, nil, placeholder: "Email...", class: "form-control"
        .form-group
          = text_area_tag :message, nil, placeholder: "Message...", class: "form-control"
        .form-group
          = submit_tag "Send", class: "btn btn-default"

